<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CallLogCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/white">

        <!-- Header Section: Call Type Icon + Contact Info + Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Call Type Icon with Background -->
            <FrameLayout
                android:id="@+id/frameCallTypeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp">

                <View
                    android:id="@+id/viewCallTypeBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_call_incoming" />

                <ImageView
                    android:id="@+id/imageViewCallType"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_incoming"
                    android:contentDescription="Call type icon" />

            </FrameLayout>

            <!-- Contact Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewContactName"
                    style="@style/CallLogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="3"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/textViewPhoneNumber"
                    style="@style/CallLogSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From: +1 (555) 123-4567"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    tools:text="From: +1 (555) 123-4567" />

                <TextView
                    android:id="@+id/textViewCallTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INCOMING CALL"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    tools:text="INCOMING CALL" />

            </LinearLayout>

            <!-- Time and Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textViewTime"
                    style="@style/CallLogDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/primary_blue"
                    tools:text="2:30 PM" />

                <TextView
                    android:id="@+id/textViewDate"
                    style="@style/CallLogDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 25, 2024"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    tools:text="Dec 25, 2024" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Badges Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Sync Status Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_sync_status"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:id="@+id/imageViewSyncStatus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sync_success"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Sync status icon" />

                <TextView
                    android:id="@+id/textViewSyncStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synced"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Synced" />

            </LinearLayout>

            <!-- Call Status Badge -->
            <LinearLayout
                android:id="@+id/layoutCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_status_completed"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/textViewCallStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Completed" />

            </LinearLayout>

        </LinearLayout>

        <!-- All Call Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Complete Call Details"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Details Grid Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1: Duration & Features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Duration"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2m 30s"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        tools:text="2m 30s" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¥ Features"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewFeatures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HD, WiFi"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        tools:text="HD, WiFi" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2: Location & Country -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Location"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York, NY"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        tools:text="New York, NY" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Country"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        tools:text="US" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 3: SIM Card & Number Presentation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“± SIM Card"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewPhoneAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM 1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        tools:text="SIM 1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž Presentation"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewPresentation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allowed"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        tools:text="Allowed" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 4: Read Status & New Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘ï¸ Read Status"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewReadStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        tools:text="Read" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/background_light"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ†• Entry Status"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewNewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp"
                        tools:text="New" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 5: Via Number (Full Width if Present) -->
            <LinearLayout
                android:id="@+id/layoutViaNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="8dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Via Number (Forwarded)"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewViaNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 (555) 987-6543"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    tools:text="+1 (555) 987-6543" />

            </LinearLayout>

            <!-- Row 6: Data Usage (Full Width if Present) -->
            <LinearLayout
                android:id="@+id/layoutDataUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="8dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Data Usage (VoIP)"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewDataUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 MB"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    tools:text="2.5 MB" />

            </LinearLayout>

            <!-- Row 7: Post Dial Digits (Full Width if Present) -->
            <LinearLayout
                android:id="@+id/layoutPostDialDigits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="8dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ·ï¸ Post Dial Digits"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewPostDialDigits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123#456"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    tools:text="123#456" />

            </LinearLayout>

            <!-- Row 8: Voicemail Transcription (Full Width if Present) -->
            <LinearLayout
                android:id="@+id/layoutTranscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/primary_blue_light"
                android:padding="8dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¤ Voicemail Transcription"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />

                <TextView
                    android:id="@+id/textViewTranscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello, this is a test voicemail message. Please call me back when you get this."
                    android:textSize="11sp"
                    android:textStyle="italic"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    android:maxLines="10"
                    tools:text="Hello, this is a test voicemail message. Please call me back when you get this." />

            </LinearLayout>

        </LinearLayout>

        <!-- Sync Information Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Sync Information"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”„ Attempts"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewSyncAttempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    tools:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="8dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ·ï¸ ESPO ID"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewEspoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC123XYZ"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="ABC123XYZ" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>